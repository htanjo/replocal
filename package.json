{
  "name": "replocal",
  "version": "0.2.0",
  "description": "Proxy for replacing web contents with local files.",
  "main": "lib",
  "bin": {
    "replocal": "bin/replocal"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "test": "npm run lint && istanbul cover node_modules/mocha/bin/_mocha",
    "lint": "eslint lib bin/replocal test",
    "test-unit": "mocha",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/htanjo/replocal.git"
  },
  "keywords": [
    "proxy",
    "cli"
  ],
  "author": "Hiroyuki Tanjo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/htanjo/replocal/issues"
  },
  "homepage": "https://github.com/htanjo/replocal#readme",
  "dependencies": {
    "chalk": "^1.1.1",
    "commander": "^2.9.0",
    "hoxy": "^3.1.3",
    "lodash.merge": "^4.0.1"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "coveralls": "^2.11.4",
    "eslint": "^1.10.3",
    "eslint-config-xo": "^0.9.1",
    "istanbul": "^0.4.0",
    "mocha": "^2.3.3",
    "request": "^2.65.0"
  },
  "eslintConfig": {
    "extends": "xo",
    "rules": {
      "indent": [2, 2, {"SwitchCase": 1}],
      "brace-style": [2, "stroustrup", {"allowSingleLine": false}],
      "padded-blocks": 0
    }
  }
}
